<h1>Edit your task</h1>

<%= form_for @task do |f| %>

        <%= f.label :title, "Enter a task" %> : <br>
        <%= f.text_field :title %> <br>

        <%= f.label :details, "Enter a description" %> : <br>
        <%= f.text_area :details %> <br>

        <%= f.label :completed, "Completed" %> :
        <%= f.check_box :completed %> <br>

        <%= f.submit "Update my task" %>
<% end %>

<p><%= link_to "Back to list", tasks_path %></p>
