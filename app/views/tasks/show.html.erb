<h1><%= @task.title %></h1>
<p><b>Description : </b><%= @task.details %></p>
<% if @task.completed %>
<input type="checkbox" checked disabled> Task completed
<% else %>
<input type="checkbox" disabled> Task incomplete
<% end %>
<p><%= link_to "Update task", edit_path %></p>
<p><%= link_to "Back to list", tasks_path %></p>
